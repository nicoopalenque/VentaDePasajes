    <ControlTemplate x:Key="btnTemplateAceptar" TargetType="Button">
        <Border x:Name="btnAceptar" Height="25" Width="75" Background="Green" CornerRadius="10, 10, 10, 10">
            <TextBlock FontFamily="Berlin Sans FB" FontSize="14" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Image Source="/assets/accept_32.png" Height="10" Width="10" VerticalAlignment="Center"/>
                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Content="Aceptar" />
            </TextBlock>
        </Border>
        <ControlTemplate.Triggers>
            <Trigger Property="IsMouseOver" Value="true">
                <Setter Property="Foreground" Value="Black"/>
                <Setter Property="FontWeight" Value="Bold"/>
                <Setter Property="Background" Value="DodgerBlue" TargetName="btnAceptar"/>
                <Setter Property="Height" Value="30" TargetName="btnAceptar"/>
                <Setter Property="Width" Value="80" TargetName="btnAceptar"/>
            </Trigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>
    
